*
  margin 0
  padding 0
  box-sizing border-box
  line-height 1
  font-family 'Fira Sans', sans-serif
  &:before
    box-sizing border-box
h1, h2, h3, h4, h5, h6
  margin 0
.container
  max-width 480px
  margin 0 auto
  min-height 100vh
  display flex
  flex-direction column
  align-items stretch
  overflow hidden
.header
  height 46px
  background-image linear-gradient(90deg, #A00000 0%, #FD0000 100%)
  +element(text)
    font-weight 700
    font-size 16px
    line-height 19px
    color #fff
  +element(top)
    height 4px
    background-color #000
  +element(inner)
    height 42px
    display flex
    justify-content space-between
    align-items center
    padding 0 14px
.music
  height 35px
  width 35px
  background-color #000
  border-radius 50%
  display flex
  justify-content center
  align-items center
.main
  display flex
  flex-direction column
  flex-grow 1
  padding-top 13px
.slider
  display flex
  gap 12px
  margin-left 15px
.btns
  display flex
  flex-direction column
  justify-content center
  align-items center
  flex-grow 1
  background-image url(../images/bg.png)
  background-position left center
  background-repeat no-repeat
  background-size auto 100%
.btn
  height 100px
  width 90%
  line-height 70px
  background linear-gradient(180deg, #FFE600 0%, #F4ED45 0.01%, #F2DA00 100%)
  border 3px solid #1E7D0E
  border-radius 10px
  font-family 'Fira Sans', sans-serif
  font-weight 800
  font-size 24px
  color #000
  text-decoration none
  display flex
  justify-content center
  align-items center
  margin-bottom 5px
  +element(play)
    margin-right 10px
  +element(desc)
    font-weight 400
    font-size 10px
    line-height 9px
    color #000
  +element(group)
    width 100%
    display flex
    flex-direction column
    align-items center
    & + &
      margin-top 20px
  @media screen and (max-height: 700px)
    height 70px
.search
  height 40px
  display flex
  justify-content center
  background-color #000
  +element(inner)
    display flex
    align-items center
  +element(btn)
    margin-right 10px
    cursor pointer
.input
  width 267px
  height 30px
  line-height 30px
  background-color #fff
  border-radius 5px
  padding 0 32px 0 12px
  border 0
  outline 0
  font-size 12px
  &::placeholder
    line-height 30px
    font-size 12px
    color #000
  +element(holder)
    position relative
  +element(search)
    position absolute
    top 6px
    right 11px
    cursor pointer
.footer
  +element(text)
    font-size 10px
    line-height 9px
    color #7C7C7C
    text-align center
    padding 5px 15px
  +element(link)
    color #7C7C7C